<h3 class="title">Reset Password</h3>

<%= form_tag password_resets_path, :method => :post do %>
	<div class="field">
    <p>
		  <%= label_tag :email %>
		  <%= text_field_tag :email, params[:email], :class => "short-field" %>
      <span class="actions"><%= submit_tag "Reset Password", :class => "button control" %></span>
    </p>
	</div>
	
<% end %>
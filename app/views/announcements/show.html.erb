<p>
  <b>Title:</b>
  <%= @announcement.title %>
</p>

<p>
  <b>Description:</b>
</p>
<% # safe to use raw() here as html_description does XSS escaping %>
<%= raw(@announcement.html_description) %>

<% if @announcement.has_datetime %>
<p>
  <b>Start time:</b>
  <%= @announcement.start_time %>
</p>

<p>
  <b>End time:</b>
  <%= @announcement.end_time %>
</p>
<% end %>

<p>
  <b>Location:</b>
  <%= @announcement.location %>
</p>

<p>
  <b>Contact:</b>
  <%= @announcement.contact %>
</p>

<p>
  <b>Email:</b>
  <%= @announcement.email %>
</p>

<p>
  <b>Start advertising on:</b>
  <%= @announcement.announce_start_time %>
</p>

<p>
  <b>Stop advertising after:</b>
  <%= @announcement.announce_end_time %>
</p>


<%= link_to 'Edit', edit_announcement_path(@announcement) %> |
<%= link_to 'Back', announcements_path %>
